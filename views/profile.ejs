    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>

<body>

    <p>
        <%= user.Student_Name %> 
        <%= user.Student_ID %> 

         
    </p>
    <p>
        <%= locals.user.Student_Name %> 
    </p>

    <div>
        <a href="/Leave/long-leave">
            <button>
                Apply for long leave

            </button>

        </a>

    </div>


    <div>
        <a href="/Leave/late-leave">
            <button>
                Apply for late leave

            </button>

